{
  "name": "liver-streams",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "preview": "pnpm --filter @liver-streams/ui preview",
    "test": "pnpm -r --parallel test",
    "typecheck": "tsgo --noEmit && pnpm -r --parallel typecheck",
    "lint": "oxlint --type-aware . && pnpm -r --parallel lint",
    "fix": "oxlint --type-aware --fix . && oxfmt --write . && pnpm -r --parallel fix",
    "prepare": "git config --unset core.hooksPath 2>/dev/null; rm -rf .husky 2>/dev/null; lefthook install"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "catalog:",
    "@tsconfig/node24": "catalog:",
    "@types/node": "catalog:",
    "@typescript/native-preview": "catalog:",
    "lefthook": "2.1.0",
    "oxfmt": "catalog:",
    "oxlint": "catalog:",
    "oxlint-tsgolint": "catalog:",
    "typescript": "catalog:"
  }
}
