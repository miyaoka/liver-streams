{
  "name": "liver-streams",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "preview": "pnpm --filter @liver-streams/web preview",
    "test:all": "pnpm -r --include-workspace-root --no-bail --aggregate-output --reporter=append-only test",
    "typecheck": "tsgo --noEmit",
    "typecheck:all": "pnpm -r --include-workspace-root --no-bail --aggregate-output --reporter=append-only typecheck",
    "lint:all": "pnpm -r --include-workspace-root --no-bail --aggregate-output --reporter=append-only lint",
    "fix": "oxfmt '!apps/**' '!packages/**'",
    "fix:all": "pnpm -r --include-workspace-root --no-bail --aggregate-output --reporter=append-only fix",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "catalog:",
    "@tsconfig/node24": "catalog:",
    "@types/node": "catalog:",
    "@typescript/native-preview": "catalog:",
    "lefthook": "2.1.1",
    "oxfmt": "catalog:",
    "oxlint": "catalog:",
    "oxlint-tsgolint": "catalog:",
    "typescript": "catalog:"
  }
}
