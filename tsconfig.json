{
  "extends": "@tsconfig/node24/tsconfig.json",
  "include": ["**/*.ts"],
  "exclude": ["apps/**", "packages/**"],
  "compilerOptions": {
    "incremental": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "lib": ["ESNext", "DOM", "DOM.Iterable"]
  }
}
