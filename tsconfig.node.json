{
  "extends": "@tsconfig/node24/tsconfig.json",
  "include": ["**/*.ts"],
  "exclude": ["packages/**", "services/**"],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "lib": ["ESNext", "DOM", "DOM.Iterable"]
  }
}
